
@using Demo.BLL.Data_Transfer_Objects__DTOs_.EmployeeDTOs
@using Demo.BLL.Data_Transfer_Objects__DTOs_.RolesDTOs
@using Demo.BLL.Data_Transfer_Objects__DTOs_.UserDTOs
@model IEnumerable<CreatedRoleDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br />
<br />

<br />
<a class="btn btn-success" asp-controller="Roles" asp-action="Create">Add New Role</a>
<br />

<div class="m-2">
    <form asp-action="index" class="row offset-2" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="RoleSearchName" placeholder="Role's Name'" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-info" value="Search" />
        </div>
    </form>

</div>

@if (Model.Any())
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.RoleName)</th>

                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var User in Model)
            {
                <tr>

                    <td>@User.Id</td>
                    <td>@User.RoleName</td>


                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@User.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@User.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@User.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Roles Found !!</h2>
    </div>
}




